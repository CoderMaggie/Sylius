{% extends '@SyliusWeb/Email/layout.html.twig' %}

{% block content %}
    <div class="box text-center">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <h1>{{ email.firstName.data }} {{ email.lastName.data }}</h1>
            </div>
        </div>
    </div>

    <div class="col-sm-8 col-sm-offset-2">
        <div class="row">
            <div class="box">
                <p class="text-center">
                    {{ email.message.data }}
                </p>
            </div>
        </div>
    </div>
{% endblock %}
