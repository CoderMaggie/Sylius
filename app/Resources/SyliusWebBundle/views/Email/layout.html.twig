<!DOCTYPE html>
<html lang='en'>

<head>
    <meta name='viewport' content='width=device-width, initial-scale=1.0' charset='UTF-8'/>

    {% block stylesheets %}
        {{ include('@SyliusWeb/_stylesheets.html.twig') }}
    {% endblock %}
</head>

<body>

<div class="container">
    <div id="content" class="col-md-12">
        {% block content %}
            <div id="flashes" class="col-md-12">
                {{ include('@SyliusWeb/Frontend/_flashes.html.twig') }}

                {% block flashes %}
                {% endblock %}
            </div>
        {% endblock %}
    </div>
</div>

<footer id="footer">
    <div class="container">
        {% block footer %}
        {% endblock %}
        <p class="pull-left">&copy; <a href="#">CJ-MaX</a>, 2016{% if ('now'|date('Y') != 2016) %} - {{ 'now'|date('Y') }} {% endif %}.</p>
    </div>
</footer>

{% block javascripts %}
    {{ include('@SyliusWeb/_javascripts.html.twig') }}
{% endblock %}
</body>
</html>
