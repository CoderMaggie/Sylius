{% import '@SyliusWeb/Frontend/Product/macros.html.twig' as macro %}
{% set product = productGridItem.product %}
{% if productGridItem.path is not empty %}
    {% set itemImagePath = productGridItem.path|imagine_filter('sylius_large') %}
{% else %}
    {% set itemImagePath = product.image ? product.image.path|imagine_filter('sylius_large') : 'http://placehold.it/200x200' %}
{% endif %}

<div class="col-md-2 col-sm-3 col-xs-6">
    <div class="grid-item gi-product">
        <div class="image same-height-always">
            <a href="{{ path(product) }}">
                <img src="{{ itemImagePath }}" alt="" class="img-responsive image1">
            </a>
            <div class="quick-view-button">
                <a href="{{ path(product) }}" data-toggle="modal" data-target="#product-quick-view-modal" class="btn btn-default btn-sm">Quick view</a>
            </div>
        </div>
        <!-- /.image -->
        <div class="text">
            <h3><a href="{{ path(product) }}">{{ product.name }}</a></h3>
            <p class="price">{{ sylius_calculate_price(product.masterVariant)|sylius_price }}</p>
        </div>
        <!-- /.text -->

        {{ macro.product_grid_ribbons(productGridItem) }}
    </div>
    <!-- /.product -->
</div>
