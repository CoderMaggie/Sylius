{% import '@SyliusWeb/Frontend/Product/macros.html.twig' as macro %}
<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-body">

            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

            <div class="row quick-view product-main">
                <div class="col-sm-6">
                    <div class="quick-view-main-image">
                        <img src="{{ product.image ? product.image.path|imagine_filter('sylius_large') : 'http://placehold.it/450x678' }}" alt="" class="img-responsive">
                    </div>

                        {{ macro.all_ribbons('quick_view_ribbon', product) }}

                    <div class="row thumbs">
                        {% for image in product.images|slice(0, 3) %}
                            <div class="col-xs-4">
                                <a href="{{ image.path|imagine_filter('sylius_large') }}" title="{{ product.name }}" class="thumb">
                                    <img class="img-responsive" src="{{ image.path|imagine_filter('sylius_small') }}" alt="{{ product.name }}">
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-sm-6">

                    <h2>{{ product.name }}</h2>
                    <p class="text-muted text-small text-center">{{ product.description }}</p>

                    <form action="{{ path('sylius_cart_item_add', {'id': product.id}) }}" method="post" class="clearfix">
                        <div class="col-sm-12 col-lg-12" id="productPrice">
                            <div class="box">
                                <p class="price">{{ sylius_calculate_price(product.masterVariant)|sylius_price }}</p>
                                <div class="add-cart-block-vertical">
                                    <p class="text-center">
                                        <button type="submit" class="btn btn-primary btn-cart">
                                            <i class="fa fa-cart-plus"></i>
                                            {{ 'sylius.ui.add_to_cart'|trans }}
                                        </button>
                                    </p>
                                </div>
                            </div>

                            <div class="box social" id="product-social">
                                <h4>{{ 'app.ui.show_to_friends'|trans }}</h4>
                                <p>
                                    <a href="#" class="external facebook" data-animate-hover="pulse"><i class="fa fa-facebook"></i></a>
                                    <a href="#" class="external gplus" data-animate-hover="pulse"><i class="fa fa-google-plus"></i></a>
                                    <a href="#" class="external twitter" data-animate-hover="pulse"><i class="fa fa-twitter"></i></a>
                                    <a href="#" class="email" data-animate-hover="pulse"><i class="fa fa-envelope"></i></a>
                                </p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
