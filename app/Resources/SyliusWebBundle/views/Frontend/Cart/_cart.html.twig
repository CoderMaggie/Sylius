<div class="table-responsive">
    <table class="table" id="cart-summary">
        <thead>
        <tr>
            <th colspan="3">Product</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th colspan="2">Total</th>
        </tr>
        </thead>
        <tbody>
            {% for item in form.items %}
                {% include 'SyliusWebBundle:Frontend/Cart:_item.html.twig' %}
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <th colspan="5">Total</th>
                <th colspan="2">{{ cart.itemsTotal|sylius_price }}</th>
            </tr>
            <tr class="box">
                <td colspan="1">{{ form_label(form.additionalInformation, null, {'label_attr': {'class': 'text-muted pull-left'}}) }}</td>
                <td colspan="6">
                    {{ form_widget(form.additionalInformation) }}
                </td>
            </tr>
        </tfoot>
    </table>
</div>

<div class="box-footer">
    <div class="pull-left">
        <a href="#" class="btn btn-default"><i class="fa fa-chevron-left"></i> Continue shopping</a>
    </div>
    <div class="pull-right">
        <button class="btn btn-default"><i class="fa fa-refresh"></i> Update cart</button>
        <button type="submit" class="btn btn-primary">Proceed to checkout <i class="fa fa-chevron-right"></i>
        </button>
    </div>
</div>
