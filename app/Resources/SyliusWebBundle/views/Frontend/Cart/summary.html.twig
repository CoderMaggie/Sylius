{% extends '@SyliusWeb/Frontend/layout.html.twig' %}

{% block title %}
    - {{ 'app.ui.summary'|trans }}
{% endblock %}

{% block topbar %}
    <ol class="breadcrumb">
        <li><a href={{ path('sylius_homepage') }}>{{ 'app.ui.home'|trans }}</a></li>
        <li>{{ 'app.ui.shopping_cart'|trans }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="box text-center">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <h1>{{ 'app.ui.shopping_cart'|trans }}</h1>
                <p class="text-muted">You currently have {{ cart.items|length }} item{% if cart.items|length != 1 %}s{% endif %} in your cart.</p>
            </div>
        </div>
    </div>

    {{ parent() }}

    <div class="row">
        <form action="{{ path('sylius_cart_save') }}" method="post" novalidate>
        <div class="col-md-9 clearfix" id="cart">
            {% if not cart.empty %}

            <div class="box">
                {% include '@SyliusWeb/Frontend/Cart/_cart.html.twig' %}

                <div class="box-footer">
                    <div class="pull-left">
                        <a href="{{ path('app_shop_product_index') }}" class="btn btn-default"><i class="fa fa-chevron-left"></i>{{ 'app.ui.continue_shopping'|trans }}</a>
                    </div>
                    <div class="pull-right">
                        <a href="{{ path('sylius_checkout_start') }}" class="btn btn-primary">{{ 'app.ui.proceed_to_checkout'|trans }}<i class="fa fa-chevron-right"></i></a>
                    </div>
                </div>
            </div>

            {% endif %}

            {{ render(url('sylius_partial_product_latest', {'limit': 5, 'template': 'SyliusWebBundle:Frontend/Product:_similar.html.twig'})) }}
        </div>

        <div class="col-md-3">
            {% if not cart.empty %}
                {{ include(
                    '@SyliusWeb/Frontend/Cart/_orderSummary.html.twig',
                    {'order': cart}
                ) }}
            {% endif %}

            <div class="box">
                <div class="box-header text-center">
                    <h4>{{ 'sylius.ui.coupon'|trans }}</h4>
                </div>
                <p class="text-muted">{{ 'app.ui.enter_coupon_code'|trans }}</p>
                <div class="input-group">
                    {{ form_row(form.promotionCoupon, {'label': false}) }}

                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-gift"></i></button>
                    </span>
                </div>
            </div>
        </div>
            <div class="hidden">
                {{ form_rest(form) }}
            </div>
        </form>
    </div>
    {% block quick_view %}
        <div class="modal fade" id="product-quick-view-modal" tabindex="-1" role="dialog" aria-hidden="false">

        </div>
    {% endblock %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $(".quick-view-button").on("click", "a", function () {
            $("#product-quick-view-modal").empty();

            $.ajax({
                url: $(this).attr("href")
            }).done( function(data) {
                $("#product-quick-view-modal").append(data);
            });
        });
    </script>
{% endblock %}
