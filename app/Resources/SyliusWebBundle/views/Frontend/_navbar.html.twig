{% set cart = sylius_cart_get() %}

<div id="navbar" class="navbar navbar-default navbar-fixed-top yamm" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand home" href="{{ path('sylius_homepage') }}">
                <h3><u>CJ-MaX</u></h3>
                <span class="sr-only">CJ-MaX - go to homepage</span>
            </a>

            <div class="navbar-buttons">
                <a href="#" class="btn btn-primary navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <b class="caret"></b>
                </a>
                <a class="btn btn-primary navbar-toggle" href={{ path('sylius_cart_summary') }}>
                    <i class="fa fa-shopping-cart"></i>  <span class="hidden-xs"></span>
                </a>
                <button type="button" class="navbar-toggle btn-default" data-toggle="collapse" data-target="#search">
                    <span class="sr-only">Toggle search</span>
                    <i class="fa fa-search"></i>
                </button>
                <button type="button" class="navbar-toggle" data-toggle="modal" data-target="#login-modal">
                    <span class="sr-only">User login</span>
                    <i class="fa fa-user"></i>
                </button>
            </div>
        </div>

        <div class="navbar-collapse collapse" id="navigation">
            {{ knp_menu_render('menu.categories', {'template': '@SyliusWeb/Frontend/Menu/_main.html.twig'}) }}
        </div>

        <div class="navbar-collapse right" id="basket-overview">
            <a class="btn btn-primary navbar-btn" href={{ path('sylius_cart_summary') }}>
                <i class="fa fa-shopping-cart"></i>
                <span class="hidden-sm">{{ cart.countItems() }}</span> item{% if cart.countItems() != 1 %}s{% endif %}
                <span class="hidden-md">in cart</span>
            </a>
        </div>

        <div class="navbar-collapse right">
            <button type="button" class="btn navbar-btn btn-default" data-toggle="collapse" data-target="#search">
                <span class="sr-only">Toggle search</span>
                <i class="fa fa-search"></i>
            </button>
        </div>

        <div class="navbar-collapse right">
            <a class="btn btn-primary navbar-btn" href={{ path('sylius_user_security_login') }}>
                <i class="fa fa-users"></i>
            </a>
        </div>

        {{ include('@SyliusWeb/Frontend/_search.html.twig') }}
    </div>
</div>
