<div class="modal fade" id="delayed-payment-confirmation-modal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title">{{ 'sylius.ui.confirmation_title'|trans }}</h3>
            </div>

            <div class="modal-body text-center">
                <h4 class="text-muted"></h4>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i> {{ 'sylius.ui.cancel'|trans }}</button>
                <a class="btn btn-primary" id="confirm-delayed-payment">
                    <i class="fa fa-check"></i><span>{{ 'app.ui.confirm'|trans }}</span>
                </a>
            </div>
        </div>
    </div>
</div>
