{% set product = item.product %}
<tr>
    <th colspan="3">
        {{ include(
            'SyliusWebBundle:Frontend/Product:_variant.html.twig',
            {'variant': item.variant}
        ) }}
    </th>
    <th>
        {{ item.quantity }}
    </th>
    <th>
        {% if item.total != (item.unitPrice * item.quantity) %}
            <s>{{ item.unitPrice|sylius_price }}</s>
            {{ (item.total / item.quantity)|sylius_price }}
        {% else %}
            {{ item.unitPrice|sylius_price }}
        {% endif %}
    </th>
    <th colspan="2">
        {{ item.total|sylius_price }}
    </th>
</tr>
