{% extends '@SyliusWeb/Frontend/layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts output='assets/compiled/frontend_province.js'
        'bundles/syliusweb/js/province-choices.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block title %}
    - {{ 'sylius.ui.checkout'|trans }}
{% endblock %}

{% block topbar %}
    <ul class="breadcrumb">
        <li><a href={{ path('sylius_homepage') }}>{{ 'app.ui.home'|trans }}</a></li>
        <li>{{ 'sylius.ui.checkout'|trans }} - {{ 'app.ui.address'|trans }}</li>
    </ul>
{% endblock %}

{% block content %}
    <div class="box text-center">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <h1>{{ 'sylius.ui.checkout'|trans }} - {{ 'app.ui.address'|trans }}</h1>
            </div>
        </div>
    </div>

    {{ parent() }}

    <div class="col-md-9 clearfix" id="checkout">
        <div class="box">
            <form method="post" action="{{ path(context.process.forwardRoute, {'stepName': context.currentStep.name}) }}" novalidate>

                {{ include('@SyliusWeb/Frontend/Checkout/Step/_statusBar.html.twig') }}

                <div class="content">

                    {{ form_errors(form) }}

                    <div class="address-container">
                        <div class="col-sm-12 text-center">
                            <h3>{{ 'sylius.ui.shipping_address'|trans }}</h3>
                        </div>
                        {{ include(
                            '@SyliusWeb/Frontend/Address/_form.html.twig',
                            {'form': form.shippingAddress}
                        ) }}
                        <div class="spacer-50">&nbsp;</div>
                        <div class="col-sm-12">
                            <div class="row">
                                {{ form_widget(form.differentBillingAddress, {'attr': {'class': 'sylius-different-billing-address-trigger'}}) }}
                                {{ form_label(form.differentBillingAddress, null, {'label_attr': {'class': 'text-muted'}}) }}
                            </div>
                        </div>
                        <div class="spacer-50">&nbsp;</div>
                    </div>

                    <div class="address-container" id="sylius-billing-address-container">
                        <div class="col-sm-12 text-center">
                            <h3>{{ 'sylius.ui.billing_address'|trans }}</h3>
                        </div>
                        {{ include(
                            '@SyliusWeb/Frontend/Address/_form.html.twig',
                            {'form': form.billingAddress}
                        ) }}
                    </div>

                    <div class="box-footer">
                        <div class="pull-left">
                            <a href="{{ path('sylius_cart_summary') }}" class="btn btn-default"><i class="fa fa-chevron-left"></i>{{ 'app.ui.back_to_cart'|trans }}</a>
                        </div>
                        <div class="pull-right">
                            <button type="submit" class="btn btn-primary">
                                {{ 'app.ui.continue_to_shipping_method'|trans }}<i class="fa fa-chevron-right"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="hidden">
                    {{ form_rest(form) }}
                </div>
            </form>
        </div>
    </div>

    <div class="col-md-3">
        {% if not order.empty %}
            {{ include('@SyliusWeb/Frontend/Cart/_orderSummary.html.twig') }}
        {% endif %}
    </div>

{% endblock %}
