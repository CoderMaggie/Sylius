{% extends '@SyliusWeb/Frontend/layout.html.twig' %}

{% block title %}
    - Summary
{% endblock %}

{% block topbar %}
    <ol class="breadcrumb">
        <li><a href="#">Home</a></li>
        <li>Checkout - Order review</li>
    </ol>
{% endblock %}

{% block content %}

    {{ parent() }}

    <div class="row">
        <div class="col-md-9 clearfix" id="checkout">
            <div class="box">
                <ul class="nav nav-pills nav-justified">
                    <li><a href="{{ path('sylius_checkout_addressing') }}"><i class="fa fa-map-marker"></i><br>Address</a>
                    </li>
                    <li><a href="{{ path('sylius_checkout_shipping') }}"><i class="fa fa-truck"></i><br>Shipping Method</a>
                    </li>
                    <li><a href="{{ path('sylius_checkout_payment') }}"><i class="fa fa-money"></i><br>Payment Method</a>
                    </li>
                    <li class="active"><a href="#"><i class="fa fa-eye"></i><br>Order Review</a>
                    </li>
                </ul>

                {% include '@SyliusWeb/Frontend/Checkout/Step/Finalize/_order.html.twig' %}

                <div class="box-footer">
                    <div class="pull-left">
                        {% if context.previousStep is not null %}
                            <a href="{{ path(context.process.displayRoute, {'stepName': context.previousStep.name}) }}" class="btn btn-default">
                                <i class="fa fa-chevron-left"></i> {{ 'sylius.ui.back'|trans }}
                            </a>
                        {% endif %}
                    </div>
                    <div class="pull-right">
                        <a href="{{ path(context.process.forwardRoute, {'stepName': context.currentStep.name}) }}" class="btn btn-primary">
                            <i class="fa fa-check"></i> {{ 'sylius.ui.place_order'|trans }}
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            {{ include('@SyliusWeb/Frontend/Cart/_orderSummary.html.twig') }}
        </div>
    </div>
{% endblock %}
