<!DOCTYPE html>
<html lang='en'>

<head>
    <meta name='viewport' content='width=device-width, initial-scale=1.0' charset='UTF-8'/>

    {% block stylesheets %}
        {{ include('@SyliusWeb/_stylesheets.html.twig') }}
    {% endblock %}

    <title>CJ-MaX {% block title %}{% endblock %}</title>
</head>

<body>
    {% block header %}
        <div id="header" class="container">
            {% block navbar %}
                {{ include('@SyliusWeb/Frontend/_navbar.html.twig') }}
            {% endblock %}
        </div>
    {% endblock %}

    <div id="sidebar" class="hidden-sm hidden-xs">
        {% block sidebar %}
        {% endblock %}
    </div>

    <div class="container">
        <div id="topbar" class="col-md-12">
            {% block topbar %}
            {% endblock %}
        </div>

        <div id="content" class="col-md-12">
            {% block content %}
                <div id="flashes" class="col-md-12">
                    {{ include('@SyliusWeb/Frontend/_flashes.html.twig') }}

                    {% block flashes %}
                    {% endblock %}
                </div>
            {% endblock %}
        </div>
    </div>

    <footer id="footer">
        <div class="container">
            {% block footer %}
                {{ include('@SyliusWeb/Frontend/_footer.html.twig') }}
            {% endblock %}
        </div>
    </footer>
    <div id="copyright">
        <div class="container">
            <div class="col-md-12">
                <p class="pull-left">
                    &#9400; 2016{% if ('now'|date('Y') != 2016) %} - {{ 'now'|date('Y') }} {% endif %}
                    BoardGameMonster is a trading name of Caponica Ltd.
                </p>
                <p class="pull-right">
                    <img src="{{ asset('img/payment.png') }}">
                </p>
            </div>
        </div>
    </div>

    {% block javascripts %}
        {{ include('@SyliusWeb/_javascripts.html.twig') }}
    {% endblock %}
</body>
</html>
