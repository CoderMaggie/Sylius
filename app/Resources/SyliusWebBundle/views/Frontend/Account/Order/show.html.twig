{% import '@SyliusWeb/Frontend/Macros/buttons.html.twig' as buttons %}
{% extends '@SyliusWeb/Frontend/Account/layout.html.twig' %}

{% set orderLabel = 'sylius.ui.order'|trans ~' #'~ order.number %}

{% block title %}
    - {{ orderLabel }}
{% endblock %}

{% block topbar %}
    <ul class="breadcrumb">
        <li><a href={{ path('sylius_homepage') }}>{{ 'app.ui.home'|trans }}</a></li>
        <li>{{ 'app.ui.my_account'|trans }}</li>
        <li><a href={{ path('sylius_account_order_index') }}>{{ 'sylius.ui.orders'|trans }}</a></li>
        <li>{{ '#' ~ order.number }}</li>
    </ul>
{% endblock %}

{% block content %}
    <div class="box text-center">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <h1>{{ orderLabel }}</h1>
            </div>
        </div>
    </div>

    {{ parent() }}

    <div class="col-md-9 clearfix" id="customer-order">
        <div class="box">
            <div class="row text-center" id="information">
                <div class="col-md-6">
                    <h4>{{ 'sylius.ui.created_at'|trans }} {{ order.createdAt|date() }}</h4>
                </div>
                <div class="col-md-6">
                    <h4>
                        {{ 'sylius.ui.state'|trans }} - {{ order.shipments.last.state|humanize }}
                    </h4>
                </div>
            </div>
        </div>

        <div class="box">

            {% include "@SyliusWeb/Frontend/Account/Order/_detail.html.twig" %}

        </div>
    </div>

    {% include('SyliusWebBundle:Frontend/Account:menu.html.twig') %}

{% endblock %}
