{% import '@SyliusWeb/Frontend/Macros/buttons.html.twig' as buttons %}
{% from '@SyliusWeb/Frontend/Macros/misc.html.twig' import shipment_state_label %}

<div class="row">
    {% if orders is not empty %}
        <div class="table-responsive">
            <table class="table" id="orders">
                <thead>
                <tr>
                    <td>{{ 'sylius.ui.created_at'|trans }}</td>
                    <td>{{ 'sylius.ui.number'|trans }}</td>
                    <td>{{ 'sylius.ui.total'|trans }}</td>
                    <td>{{ 'sylius.ui.state'|trans }}</td>
                    <td>{{ 'sylius.ui.invoice'|trans }}</td>
                    <td>&nbsp;</td>
                </tr>
                </thead>
                <tbody class="text-muted">
                {% for order in orders %}
                    <tr class="order" id="order-{{ order.number }}">
                        <td>{{ order.createdAt|date }}</td>
                        <td>{{ order.number }}</td>
                        <td>{{ order.total|sylius_money(order.currency) }}</td>
                        <td>
                            {{ shipment_state_label(order.shipments.last.state) }}
                        </td>
                        <td>
                            {% if order.isInvoiceAvailable %}
                                {{ buttons.btn(
                                path('sylius_account_order_invoice', {'number': order.number}),
                                'View',
                                'order-' ~ order.number ~ '-invoice',
                                'file-text'
                                ) }}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                        <td>
                            {{ buttons.show(path('sylius_account_order_show', {'number': order.number}), 'order-' ~ order.number ~ '-details') }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="col-md-12">
            <div class="box text-center">
                <p>{{ 'app.ui.you_have_no_orders'|trans }}</p>
            </div>
        </div>
    {% endif %}
</div>
