{% extends '@SyliusWeb/Frontend/Account/layout.html.twig' %}
{% from '@SyliusWeb/Frontend/Macros/actions.html.twig' import update %}

{% set personalInformationLabel = 'app.ui.personal_information'|trans %}

{% block title %}
    - {{ personalInformationLabel }}
{% endblock %}

{% block topbar %}
    <ul class="breadcrumb">
        <li><a href={{ path('sylius_homepage') }}>{{ 'app.ui.home'|trans }}</a></li>
        <li>{{ 'app.ui.my_account'|trans }}</li>
        <li>{{ personalInformationLabel }}</li>
    </ul>
{% endblock %}

{% block content %}
    <div class="box text-center">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <h1>{{ personalInformationLabel }}</h1>
            </div>
        </div>
    </div>

    {{ parent() }}

    <div class="col-md-9 clearfix">
        <div class="box">
            <form action="{{ path('sylius_account_profile_update') }}" {{ form_enctype(form) }} method="post">
                <div class="row">
                    {{ form_errors(form) }}

                    <div class="col-md-12">
                        {{ form_label(form.email, null, {'label_attr': {'class': 'text-muted pull-left'}}) }}
                        {{ form_widget(form.email) }}
                        {{ form_errors(form.email) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.firstName, null, {'label_attr': {'class': 'text-muted pull-left'}}) }}
                        {{ form_widget(form.firstName) }}
                        {{ form_errors(form.firstName) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.lastName, null, {'label_attr': {'class': 'text-muted pull-left'}}) }}
                        {{ form_widget(form.lastName) }}
                        {{ form_errors(form.lastName) }}
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-12">
                                {{ form_label(form.birthday, null, {'label_attr': {'class': 'text-muted pull-left'}}) }}
                            </div>
                        </div>
                        <div class="form-group" style="margin-bottom: 0">
                            <div class='input-group date' id='datetimepicker'>
                                {{ form_widget(form.birthday, {'attr': {'placeholder': 'DD/MM/YYYY'} }) }}
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        {{ form_errors(form.birthday) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.phoneNumber, 'app.ui.phone_number_day', {'label_attr': {'class': 'text-muted pull-left'}}) }}
                        {{ form_widget(form.phoneNumber, {'attr': {'placeholder': '(123) 456-7890'} }) }}
                        {{ form_errors(form.phoneNumber) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.secondPhoneNumber, null, {'label_attr': {'class': 'text-muted pull-left'}}) }}
                        {{ form_widget(form.secondPhoneNumber, {'attr': {'placeholder': '(123) 456-7890'} }) }}
                        {{ form_errors(form.secondPhoneNumber) }}
                    </div>
                </div>

                {{ form_rest(form) }}
                {{ update() }}
            </form>
        </div>
    </div>

    {% include('SyliusWebBundle:Frontend/Account:menu.html.twig') %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type='text/javascript'>
        $(function () {
            $('#datetimepicker').datetimepicker({
                format: 'DD/MM/YYYY'
            });
        });
    </script>
{% endblock %}
