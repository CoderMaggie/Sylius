{% extends '@SyliusWeb/Frontend/Account/layout.html.twig' %}

{% block title %}
    - Account
{% endblock %}

{% block topbar %}
    <ul class="breadcrumb">
        <li><a href={{ path('sylius_homepage') }}>Home</a></li>
        <li>Account</li>
    </ul>
{% endblock %}

{% block content %}
    <div class="box text-center">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <h1>{{ 'sylius.ui.welcome'|trans }}</h1>
                <div>{{ 'sylius.ui.welcome_to_your_space'|trans }}</div>
            </div>
        </div>
    </div>

    {{ parent() }}

    <div class="col-md-9 clearfix">
        <div class="box">
            <div class="row">
                <h4>{{ customer.lastName|upper }} {{ customer.firstName }}</h4>
                <div class="spacer-50">&nbsp;</div>
                <p>{{ 'sylius.ui.id'|trans }} {{ app.user.id }}</p>
                <p>{{ 'sylius.ui.email'|trans }} {{ customer.email }}</p>
                <p>{{ 'sylius.ui.you_are_customer_since'|trans }} {{ app.user.createdAt|date() }}</p>
            </div>
        </div>
    </div>

    {% include('SyliusWebBundle:Frontend/Account:menu.html.twig') %}

{% endblock %}
