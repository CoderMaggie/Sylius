{% extends '@SyliusWeb/Frontend/layout.html.twig' %}

{% block title %}
    - Login
{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>Login</h1>
    </div>

    <blockquote>
        <p>{{ 'sylius.security.login.info'|trans|raw }}</p>
    </blockquote>

    <div class="col-md-6 col-md-offset-3">
        <div class="box">

            <form action="{{ path('sylius_user_security_check') }}" method="post" class="form-horizontal" >

                {{ form_errors(form) }}

                <div class="row">
                    {{ form_label(form._username, null, {'label_attr': {'class': 'text-muted pull-left'}}) }}
                    {{ form_widget(form._username) }}
                    {{ form_errors(form._username) }}
                </div>
                <div class="row">
                    {{ form_label(form._password, null, {'label_attr': {'class': 'text-muted pull-left'}}) }}
                    {{ form_widget(form._password) }}
                    {{ form_errors(form._password) }}
                </div>
                <div class="spacer-50">&nbsp;</div>

                <div class="box row">
                    <div class="spacer-50">&nbsp;</div>

                    <div class="col-md-6 form-group remember-me text-center">
                        <label for="remember_me"><h4 class="text-muted">Remember me</h4></label>
                        <input type="checkbox" id="remember_me" name="_remember_me"/>
                    </div>
                    <div class="col-md-6 text-center">
                        <div class="form-actions clearfix">
                            <button class="btn btn-primary btn-lg" type="submit">
                                <i class="fa fa-sign-in"></i>
                                Log in
                            </button>
                        </div>
                    </div>
                </div>

                {{ form_rest(form) }}

            </form>

            <div class="box-footer">
                <a href="{{ path('sylius_user_request_password_reset_token') }}" class="btn btn-info btn-sm pull-left">Forgot password?</a>
                <a href="{{ path('sylius_user_registration') }}" class="btn btn-primary btn-sm pull-right">Register <i class="fa fa-user-plus"></i></a>
            </div>
        </div>
    </div>
{% endblock %}
