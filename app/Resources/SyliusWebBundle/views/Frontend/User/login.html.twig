{% extends '@SyliusWeb/Frontend/layout.html.twig' %}

{% block title %}
    - Login
{% endblock %}

{% block topbar %}
    <ul class="breadcrumb">
        <li><a href={{ path('sylius_homepage') }}>Home</a></li>
        <li>Login</li>
    </ul>
{% endblock %}

{% block content %}
    <div class="box text-center">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <h1>Login</h1>
            </div>
        </div>
    </div>

    {{ parent() }}

    <div class="col-md-6 col-md-offset-3">
        <div class="box">
            <form action="{{ path('sylius_user_security_check') }}" method="post">
                <div class="row">
                    {{ form_errors(form) }}

                    <div class="col-md-12">
                        {{ form_label(form._username, null, {'label_attr': {'class': 'text-muted pull-left'}}) }}
                        {{ form_widget(form._username) }}
                        {{ form_errors(form._username) }}
                    </div>
                    <div class="col-md-12">
                        {{ form_label(form._password, null, {'label_attr': {'class': 'text-muted pull-left'}}) }}
                        {{ form_widget(form._password) }}
                        {{ form_errors(form._password) }}
                    </div>
                    <div class="spacer-50">&nbsp;</div>
                </div>

                <div class="box">
                    <div class="row">
                        <div class="col-md-6 remember-me text-center">
                            <label for="remember_me"><h4 class="text-muted">Remember me</h4></label>
                            <input type="checkbox" id="remember_me" name="_remember_me"/>
                        </div>
                        <div class="col-md-6 text-center">
                            <button class="btn btn-primary btn-lg" type="submit">
                                <i class="fa fa-sign-in"></i>
                                Log in
                            </button>
                        </div>
                    </div>
                </div>
                {{ form_rest(form) }}

            </form>

            <div class="row">
                <a href="{{ path('sylius_user_request_password_reset_token') }}" class="btn btn-default btn-sm pull-left">Forgot password?</a>
                <a href="{{ path('sylius_user_registration') }}" class="btn btn-primary btn-sm pull-right"><i class="fa fa-user-plus"></i>Register</a>
            </div>
        </div>
    </div>
{% endblock %}
