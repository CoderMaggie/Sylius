{% macro create(cancel_url) %}
    <div class="spacer-50">&nbsp;</div>
    <div class="box">
        <div class="row">
            <div class="col-xs-5 pull-right">
                <button type="submit" class="btn btn-primary pull-right"><i class="fa fa-check"></i> {{ 'sylius.ui.create'|trans }}</button>
                <a href="{{ cancel_url|default(app.request.headers.get('referer')) }}" class="btn btn-default pull-right"><i class="fa -fa-times"></i> {{ 'sylius.ui.cancel'|trans }}</a>
            </div>
        </div>
    </div>
{% endmacro %}

{% macro update(cancel_url) %}
    <div class="spacer-50">&nbsp;</div>
    <div class="box">
        <div class="row">
            <div class="col-xs-5 pull-right">
                <button type="submit" class="btn btn-primary pull-right"><i class="fa fa-floppy-o pull-left"></i>{{ 'sylius.ui.save_changes'|trans }}</button>
                <a href="{{ cancel_url|default(app.request.headers.get('referer')) }}" class="btn btn-default pull-right"><i class="fa fa-times"></i>{{ 'sylius.ui.cancel'|trans }}</a>
            </div>
        </div>
    </div>
{% endmacro %}
