{% macro update(cancel_url) %}
    <div class="spacer-50">&nbsp;</div>
    <div class="box">
        <div class="row">
            <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o pull-left"></i>Save changes</button>
            <a href="{{ cancel_url|default(app.request.headers.get('referer')) }}" class="btn btn-default pull-right"><i class="fa fa-times"></i>Cancel</a>
        </div>
    </div>
{% endmacro %}
