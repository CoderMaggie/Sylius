<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd"
>

    <parameters>
        <parameter key="app.grid_filter.taxon.class">AppBundle\Grid\Filter\TaxonFilter</parameter>
        <parameter key="app.form.type.grid_filter.taxon.class">AppBundle\Form\Type\Grid\Filter\TaxonFilterType</parameter>
    </parameters>

    <services>
        <service id="app.grid_filter.taxon" class="%app.grid_filter.taxon.class%">
            <tag name="sylius.grid_filter" type="taxon" />
        </service>
        <service id="app.form.type.grid_filter.taxon" class="%app.form.type.grid_filter.taxon.class%">
            <tag name="form.type" alias="sylius_grid_filter_taxon" />
        </service>
    </services>

</container>
